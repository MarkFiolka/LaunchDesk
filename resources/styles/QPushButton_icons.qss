QPushButton[type="icons"] {
    background-color: transparent;
    color: #9FD7ED;
    border: 1px solid #3A3A3A;
    padding: 6px;
    min-width: 16px;
    min-height: 16px;
    qproperty-iconSize: 16px 16px;
}

QPushButton[type="icons"]:hover {
    background-color: #2A2A2A;
    border-color: #59C4ED;
}

QPushButton[type="icons"]:pressed {
    background-color: #1A1A1A;
    border-color: #2A8DB3;
}
